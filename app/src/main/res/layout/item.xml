<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_small">

    <RelativeLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameItem"
            style="@style/Text.Item"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/priceItem"
            android:background="@color/colorLightYellow"
            tools:text="Текст для визуальной проверки как расширяется item при большом количестве текста" />

        <TextView
            android:id="@+id/priceItem"
            style="@style/Text.Item"
            android:layout_alignBottom="@+id/nameItem"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorDarkYellow"
            android:gravity="center_vertical"
            android:textStyle="bold"
            tools:text="55 \u20bd" />
    </RelativeLayout>

</FrameLayout>